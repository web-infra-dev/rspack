{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/*.bk": true,
    "/target": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json5]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.ignoreLimitWarning": true,
  "eslint.enable": false,
  "cSpell.allowCompoundWords": true,
  "cSpell.caseSensitive": true,
  "json.schemas": [
    {
      "fileMatch": ["**/_meta.json"],
      "url": "./website/node_modules/@rspress/core/meta-json-schema.json"
    },
    {
      "fileMatch": ["**/_nav.json"],
      "url": "./website/node_modules/@rspress/core/nav-json-schema.json"
    }
  ],
  "rust-analyzer.procMacro.enable": true,
  "rust-analyzer.procMacro.attributes.enable": true,
  "rust-analyzer.linkedProjects": ["Cargo.toml"],
  "rust-analyzer.cargo.targetDir": true, // Don't let RA blocking cargo build
  "rust-analyzer.check.features": "all",
  "files.associations": {
    "*.snap": "markdown",
    "*.snap.txt": "markdown",
    "*.json": "jsonc"
  },
  "cSpell.words": [
    "contextify",
    "Ctxt",
    "Deque",
    "ecma",
    "napi",
    "postcss",
    "pxtorem",
    "rslib",
    "Rslib",
    "rspack",
    "rstack",
    "rstackjs",
    "threejs",
    "tokio",
    "ukey",
    "Ukey"
  ],
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  }
}
