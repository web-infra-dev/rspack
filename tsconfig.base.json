{
  "compilerOptions": {
    "module": "CommonJS", // DO NOT CHANGE: https://github.com/web-infra-dev/rspack/pull/4650
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  }
}
