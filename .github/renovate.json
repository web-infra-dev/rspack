{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["github-actions", "cargo"],
  "ignorePaths": [
    "**/tests/**",
    "**/fixtures/**",
    "webpack-examples/**",
    "webpack-test/**"
  ],
  "packageRules": [
    {
      "groupName": "github-actions",
      "matchManagers": ["github-actions"],
      "schedule": ["on wednesday"],
      "assignees": ["@Boshen"]
    },
    {
      "groupName": "cargo",
      "matchManagers": ["cargo"],
      "schedule": ["on wednesday"],
      "assignees": ["@Boshen"],
      "excludePackagePatterns": ["swc"]
    }
  ]
}
