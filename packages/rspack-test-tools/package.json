{
  "name": "@rspack/test-tools",
  "version": "1.7.0-beta.0",
  "license": "MIT",
  "description": "Test tools for rspack",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./setup-expect": "./dist/helper/setup-expect.js",
    "./setup-env": "./dist/helper/setup-env.js",
    "./setup-wasm": "./dist/helper/setup-wasm.js",
    "./package.json": "./package.json",
    "./helper/*": "./dist/helper/*.js",
    "./helper/legacy/*": "./dist/helper/legacy/*.js",
    "./helper/util/*": "./dist/helper/util/*.js"
  },
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "dev": "tsc -b -w",
    "api-extractor": "api-extractor run --verbose",
    "api-extractor:ci": "api-extractor run --verbose || diff temp/test-tools.api.md etc/test-tools.api.md"
  },
  "files": ["client", "dist", "template", "rstest.d.ts"],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "homepage": "https://rspack.rs",
  "bugs": "https://github.com/web-infra-dev/rspack/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rspack",
    "directory": "packages/rspack-test-tools"
  },
  "dependencies": {
    "@babel/generator": "7.28.5",
    "@babel/parser": "7.28.5",
    "@babel/traverse": "7.28.5",
    "@babel/types": "7.28.5",
    "cross-env": "^10.1.0",
    "filenamify": "4.3.0",
    "fs-extra": "^11.3.2",
    "iconv-lite": "^0.7.1",
    "javascript-stringify": "^2.1.0",
    "jest-diff": "^29.7.0",
    "jest-snapshot": "29.7.0",
    "jsdom": "^26.1.0",
    "memfs": "4.51.1",
    "path-serializer": "0.5.1",
    "pretty-format": "29.7.0",
    "rimraf": "^5.0.10",
    "source-map": "^0.7.6",
    "terser-webpack-plugin": "^5.3.16",
    "webpack": "5.102.1",
    "webpack-merge": "6.0.1",
    "webpack-sources": "3.3.3",
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@rspack/core": "workspace:*",
    "@types/babel__generator": "7.27.0",
    "@types/babel__traverse": "7.28.0",
    "@types/fs-extra": "11.0.4",
    "@types/jsdom": "^21.1.7",
    "typescript": "^5.9.3",
    "wast-loader": "^1.14.1"
  },
  "peerDependencies": {
    "@rspack/core": ">=1.0.0"
  }
}
