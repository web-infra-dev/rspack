{
  "name": "@rspack/test-tools",
  "version": "0.5.4",
  "license": "MIT",
  "description": "Test tools for rspack",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "build:viewer": "rspack build",
    "dev:viewer": "rspack serve",
    "dev": "tsc -b -w",
    "test:diff": "cross-env RSPACK_DIFF=true NO_COLOR=1 node --expose-gc --max-old-space-size=8192 --experimental-vm-modules ../../node_modules/jest-cli/bin/jest --runInBand --logHeapUsage --testPathPattern \".diff.test.ts\""
  },
  "files": [
    "client",
    "dist",
    "template"
  ],
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://rspack.dev",
  "bugs": "https://github.com/web-infra-dev/rspack/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-infra-dev/rspack",
    "directory": "packages/rspack-test-tools"
  },
  "dependencies": {
    "@babel/generator": "7.23.0",
    "@babel/helpers": "7.23.2",
    "@babel/parser": "7.23.0",
    "@babel/template": "7.22.15",
    "@babel/traverse": "7.23.2",
    "@babel/types": "7.23.0",
    "@rspack/core": "workspace:*",
    "csv-to-markdown-table": "^1.3.0",
    "deepmerge": "^4.3.1",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "jest-diff": "^29.7.0",
    "webpack": "^5.90.0",
    "webpack-sources": "3.2.3",
    "which-module": "2.0.1"
  },
  "devDependencies": {
    "@arco-design/web-react": "^2.56.1",
    "@monaco-editor/react": "^4.6.0",
    "@rspack/cli": "workspace:*",
    "@swc/jest": "^0.2.29",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/webpack": "5.28.5",
    "@types/webpack-sources": "3.2.3",
    "core-js": "3.36.0",
    "jest-serializer-path": "^0.1.15",
    "monaco-editor": "0.46.0",
    "monaco-editor-webpack-plugin": "7.1.0",
    "normalize.css": "^8.0.0",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-refresh": "0.14.0"
  }
}
